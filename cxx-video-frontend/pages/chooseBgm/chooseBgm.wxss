page {
    height: 100%;
} 

.container {
    display: flex;
    margin-top: 20rpx; 
    justify-content: space-around;   
    color: 1px solid rgb(240,176,183);
}

.submitBtn {
    width: 80%;
    margin-top: 35px;
    background-color: rgb(240,176,183);
    color: white;
    border-radius: 98rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.gobackBtn {
    width: 80%;
    margin-top: 15px;
    color: rgb(240,176,183);
    border-radius: 98rpx;
}


.loginLabel {
    color: gray;
    font-size: 15px;
}

.inputText {
    float: right;
    text-align: right;
    margin-right: 22px;
    margin-top: 11px;
    font-size: 15px;
}

.inputView {
    padding: 5px;
    background-color: white;
    line-height: 45px;
    border: solid 1px whitesmoke;
}

.backgroundMusic {
    align-self: center;
}

.poster {
    width: 100px;
    height: 100px;
}

.statusBtn {
    width: 65rpx;
    height: 65rpx;
    align-self: center;
}

.song {
    text-align: center;
    width: 200px;
    color: rgb(105, 105, 105);
}

.author {
    text-align: center;
    color: rgb(156, 155, 155);
    font-size: 15px;
}

.words {
    padding-top: 15px;
}

.audioFont {
    width: 200px;
}